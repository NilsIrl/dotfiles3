# `man 5 sway` for a complete reference.

### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
set $alt Mod1

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

set $term alacritty

# Note: it's recommended that you pass the final command to sway
set $menu bemenu-run

set $reboot 'systemctl reboot'
set $poweroff 'systemctl poweroff'
set $suspend 'systemctl suspend'

set $lock 'swaylock -f -c 000000'

set $pws0 'P0'
set $pws1 'P1'
set $pws2 'P2'
set $pws3 'P3'
set $pws4 'P4'
set $pws5 'P5'
set $pws6 'P6'
set $pws7 'P7'
set $pws8 'P8'
set $pws9 'P9'

set $sws0 'S0'
set $sws1 'S1'
set $sws2 'S2'
set $sws3 'S3'
set $sws4 'S4'
set $sws5 'S5'
set $sws6 'S6'
set $sws7 'S7'
set $sws8 'S8'
set $sws9 'S9'

xwayland disabled

### Idle configuration
#
#
exec swayidle -w \
	timeout 300 'swaymsg "output * dpms off"' \
		resume 'swaymsg "output * dpms on"' \
	timeout 600 $lock \
	timeout 900 $suspend \
	before-sleep $lock

for_window [app_id="firefox"] inhibit_idle fullscreen

for_window [app_id="firefox" title="^Picture-in-Picture$"] floating enabled

input * {
	xkb_layout gb
	xkb_options caps:swapescape
}

output {
	'Samsung Electric Company SyncMaster 0x00007E30' position 920 0
	'Iiyama North America PL3490WQ 0x00000118' position 0 900
}

### Key bindings
#
# Basics:
#

# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+Shift+q kill

# Start your launcher
bindsym $mod+d exec $menu

# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
# Move your focus around
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
# Or use $mod+[up|down|left|right]
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+$alt+$left move left 40px
bindsym $mod+Shift+$alt+$down move down 40px
bindsym $mod+Shift+$alt+$up move up 40px
bindsym $mod+Shift+$alt+$right move right 40px
#
# Workspaces:

workspace $pws0 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws1 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws2 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws3 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws4 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws5 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws6 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws7 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws8 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws9 output 'Iiyama North America PL3490WQ 0x00000118'

workspace $sws0 output 'Samsung Electric Company SyncMaster 0x00007E30'
workspace $sws1 output 'Samsung Electric Company SyncMaster 0x00007E30'
workspace $sws2 output 'Samsung Electric Company SyncMaster 0x00007E30'
workspace $sws3 output 'Samsung Electric Company SyncMaster 0x00007E30'
