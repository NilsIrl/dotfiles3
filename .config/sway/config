# Switch to workspace
bindsym $mod+0 workspace $pws0
bindsym $mod+1 workspace $pws1
bindsym $mod+2 workspace $pws2
bindsym $mod+3 workspace $pws3
bindsym $mod+4 workspace $pws4
bindsym $mod+5 workspace $pws5
bindsym $mod+6 workspace $pws6
bindsym $mod+7 workspace $pws7
bindsym $mod+8 workspace $pws8
bindsym $mod+9 workspace $pws9

bindsym $mod+$alt+0 workspace $sws0
bindsym $mod+$alt+1 workspace $sws1
bindsym $mod+$alt+2 workspace $sws2
bindsym $mod+$alt+3 workspace $sws3
bindsym $mod+$alt+4 workspace $sws4
bindsym $mod+$alt+5 workspace $sws5
bindsym $mod+$alt+6 workspace $sws6
bindsym $mod+$alt+7 workspace $sws7
bindsym $mod+$alt+8 workspace $sws8
bindsym $mod+$alt+9 workspace $sws9

# Move focused container$pws1 to workspace
bindsym $mod+Shift+0 move container to workspace $pws0
bindsym $mod+Shift+1 move container to workspace $pws1
bindsym $mod+Shift+2 move container to workspace $pws2
bindsym $mod+Shift+3 move container to workspace $pws3
bindsym $mod+Shift+4 move container to workspace $pws4
bindsym $mod+Shift+5 move container to workspace $pws5
bindsym $mod+Shift+6 move container to workspace $pws6
bindsym $mod+Shift+7 move container to workspace $pws7
bindsym $mod+Shift+8 move container to workspace $pws8
bindsym $mod+Shift+9 move container to workspace $pws9

bindsym $mod+Shift+$alt+0 move container to workspace $sws0
bindsym $mod+Shift+$alt+1 move container to workspace $sws1
bindsym $mod+Shift+$alt+2 move container to workspace $sws2
bindsym $mod+Shift+$alt+3 move container to workspace $sws3
bindsym $mod+Shift+$alt+4 move container to workspace $sws4
bindsym $mod+Shift+$alt+5 move container to workspace $sws5
bindsym $mod+Shift+$alt+6 move container to workspace $sws6
bindsym $mod+Shift+$alt+7 move container to workspace $sws7
bindsym $mod+Shift+$alt+8 move container to workspace $sws8
bindsym $mod+Shift+$alt+9 move container to workspace $sws9

# Layout stuff:
#
# You can "split" the current object of your focus with
# $mod+b or $mod+v, for horizontal and vertical splits
# respectively.
bindsym $mod+b splith
bindsym $mod+v splitv

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent
#
# Scratchpad:
#
# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

bindsym $mod+equal sticky toggle

bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +1%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -1%
bindsym $alt+XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +4%
bindsym $alt+XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -4%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

#
# Resizing containers:
#
mode "resize" {
	bindsym $left resize shrink width 10px
	bindsym $down resize grow height 10px
	bindsym $up resize shrink height 10px
	bindsym $right resize grow width 10px

	bindsym $alt+$left resize shrink width 40px
	bindsym $alt+$down resize grow height 40px
	bindsym $alt+$up resize shrink height 40px
	bindsym $alt+$right resize grow width 40px

	# Return to default mode
	bindsym Return mode "default"
	bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "shutdown" {
	bindsym l mode "default"; exec $lock
	bindsym p exec $poweroff
	bindsym r exec $reboot
	bindsym s mode "default"; exec $suspend

	bindsym Escape mode "default"
}
bindsym $alt+f4 mode "shutdown"

bindsym $mod+Shift+s exec ~/.config/sway/screenshot.sh

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
	position top

	# When the status_command prints a new line to stdout, swaybar updates.
	# The default just shows the current date and time.
	status_command while date +'%F %T'; do sleep 1; done

	colors {
		statusline #ffffff
		background #323232
		inactive_workspace #32323200 #32323200 #5c5c5c
	}
}

for_window [app_id="dropdown_math"] {
	move scratchpad
	scratchpad show
}
bindsym $mod+m exec sh -c 'swaymsg [app_id="dropdown_math"] scratchpad show || exec $term --class dropdown_math -e python -q'

for_window [app_id="dropdown_term"] {
	move scratchpad
	scratchpad show
}
bindsym $mod+q exec sh -c 'swaymsg [app_id="dropdown_term"] scratchpad show || exec $term --class dropdown_term'

bindsym $mod+Escape exec makoctl dismiss
bindsym $mod+Shift+Escape exec makoctl dismiss --all

exec mako
