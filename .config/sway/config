workspace $pws5 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws6 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws7 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws8 output 'Iiyama North America PL3490WQ 0x00000118'
workspace $pws9 output 'Iiyama North America PL3490WQ 0x00000118'

workspace $sws0 output 'Samsung Electric Company SyncMaster 0x00007E30'
